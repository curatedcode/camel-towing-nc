---
import { PhoneIcon, StarIcon } from "lucide-react";
import { PhoneButton } from "~/components/phone-button";
import ServiceCard from "~/components/ServiceCard.astro";
import { TestimonialCarousel } from "~/components/testimonial-carousel";
import Layout from "~/layouts/Layout.astro";
---

<Layout>
	<link
		slot="head"
		rel="preload"
		href="/assets/fonts/montserrat-v31-latin-regular.woff2"
		as="font"
		type="font/woff2"
		crossorigin="anonymous"
	/>
	<link
		slot="head"
		rel="preload"
		href="/assets/fonts/montserrat-v31-latin-500.woff2"
		as="font"
		type="font/woff2"
		crossorigin="anonymous"
	/>
	<link
		slot="head"
		rel="preload"
		href="/assets/fonts/montserrat-v31-latin-800.woff2"
		as="font"
		type="font/woff2"
		crossorigin="anonymous"
	/>
	<link slot="head" rel="preload" as="image" href="/assets/images/hero.webp" />
	<section id="hero" class="relative h-screen font-heading">
		<img
			src="/assets/images/hero.webp"
			width="1920"
			height="1080"
			class="absolute inset-0 size-full object-cover object-[30%_50%] bg-black brightness-30"
			alt="Black car strapped to the bed of a tow truck"
			loading="eager"
		/>
		<div
			class="relative z-10 flex flex-col text-neutral-200 gap-8 px-6 w-fit top-1/4 md:top-1/3 mx-auto md:items-center"
		>
			<h1 class="text-5xl font-extrabold max-w-xl">
				<span class="text-primary">Fast, Friendly Towing</span> in Greensboro
			</h1>
			<div class="text-xl font-medium mt-2 space-y-0.75 md:text-center">
				<span class="block">Locally Owned & Always Nearby.</span>
				<span class="block">License. Insured. Trusted.</span>
			</div>
			<div class="flex flex-col w-fit items-center gap-2 self-center">
				<PhoneButton className="mt-6 w-xs">
					<PhoneIcon className="size-5" /> Call Now
				</PhoneButton>
				<span class="text-neutral-300 text-sm">(336) 947-2786</span>
			</div>
		</div>
	</section>
	<div
		style={{
			backgroundImage: `
						linear-gradient(45deg, transparent 49%, #ebecf0 49%, #ebecf0 51%, transparent 51%),
						linear-gradient(-45deg, transparent 49%, #ebecf0 49%, #ebecf0 51%, transparent 51%)
					`,
			backgroundSize: "40px 40px",
		}}
	>
		<section id="services" class="px-3 py-16">
			<h1 class="text-2xl text-center mb-12 font-medium italic font-heading">
				WHAT WE DO
			</h1>
			<div class="grid gap-12 max-w-7xl mx-auto md:grid-cols-3">
				<ServiceCard
					title="24/7 Towing"
					description="Day or night, rain or shine. When you’re stuck, we’ll come get you anywhere in Greensboro."
					imgSrc="/assets/images/services-towing.webp"
					imgAlt="White car strapped down on the bed of a tow truck"
				/>
				<ServiceCard
					title="Roadside Assistance"
					description="Flat tire, dead battery, locked out, or out of gas. We’ll get you back on the road fast."
					imgSrc="/assets/images/services-fueling.webp"
					layout="right-img"
					imgAlt="Close-up shot of person pouring gas into the gas tank of a car"
				/>
				<ServiceCard
					title="Long-Distance Hauling"
					description="Need a car moved across town or across the state? We’ll handle it carefully from start to finish."
					imgSrc="/assets/images/services-hauling.webp"
					imgAlt="Gray car strapped down on the bed of a tow truck that is driving away"
				/>
			</div>
		</section>
		<section id="about" class="px-3 py-16">
			<h1 class="text-2xl text-center mb-12 font-medium italic font-heading">
				ABOUT
			</h1>
			<div
				class="border bg-card text-card-foreground border-neutral-300 rounded-md max-w-5xl mx-auto overflow-hidden md:grid md:grid-cols-2 md:gap-3"
			>
				<div class="relative h-88 md:h-102">
					<img
						src="/assets/images/dakota-portrait.webp"
						width="505"
						height="408"
						class="absolute inset-0 object-cover object-[50%_30%] size-full"
						alt="Dakota standing next to a camel that's leaning over his shoulder close to his face"
						loading="lazy"
					/>
				</div>
				<div class="px-4 py-6 flex flex-col gap-4">
					<span class="text-xl font-medium text-primary"
						>From small to well-respected</span
					>
					<p class="text-pretty leading-relaxed text-base">
						Camel Towing was started by Dakota Bryant with a mission to give
						Greensboro a towing service it could trust. We're a small local team
						committed to quick response and honest work. Whether it's a routine
						jump start or delivering a project vehicle across the county, we
						treat every job like our own. We know how frustrating car trouble
						can be, so we show up with a good attitude, a clear plan, and a real
						commitment to help. Most of our calls come from word of mouth. One
						neighbor tells another, and we work hard to earn that kind of trust
						every time we hit the road.
					</p>
					<span
						class="rounded-full px-3 py-1.5 text-sm border w-fit bg-background text-foreground mt-auto ml-auto block"
						>Locally Owned • Est. 2023</span
					>
				</div>
			</div>
		</section>
		<section id="trust" class="px-3 py-16">
			<div class="flex flex-col gap-1.5 items-center mx-auto mb-12">
				<h1 class="text-2xl text-center mb-9 font-medium italic font-heading">
					TESTIMONIALS
				</h1>
				<span class="text-primary text-lg font-medium"
					>Real reviews from real customers</span
				>
				<div class="flex gap-1.5 items-center text-neutral-700">
					<span>5.0</span>
					<div class="flex gap-1">
						<StarIcon className="size-4 fill-google-star-gold stroke-0" />
						<StarIcon className="size-4 fill-google-star-gold stroke-0" />
						<StarIcon className="size-4 fill-google-star-gold stroke-0" />
						<StarIcon className="size-4 fill-google-star-gold stroke-0" />
						<StarIcon className="size-4 fill-google-star-gold stroke-0" />
					</div>
					<span>(100+)</span>
				</div>
				<a
					href="https://www.google.com/maps/place/Camel+Towing+llc/@36.0247235,-79.9983986,10z/data=!4m8!3m7!1s0xa34db65d606bcd89:0xdf035f6c4626ce4f!8m2!3d36.0247235!4d-79.9983986!9m1!1b1!16s%2Fg%2F11vdmxh8rb"
					rel="noopener"
					referrerpolicy="no-referrer"
					class="underline text-sm">All reviews</a
				>
			</div>
			<TestimonialCarousel client:visible />
		</section>
		<section id="contact" class="relative h-[65vh] mt-16">
			<img
				src="/assets/images/greensboro-welcome-mural.webp"
				width="1920"
				height="1080"
				class="absolute inset-0 size-full object-cover object-[50%_50%] bg-black brightness-30"
				alt="A mural painting for the city of Greensboro"
				loading="lazy"
			/>
			<div
				class="relative z-10 flex flex-col items-center justify-center h-full text-center text-neutral-100 px-4"
			>
				<h2 class="text-4xl font-bold text-primary font-heading">
					Need a Tow?
				</h2>
				<p class="mt-3 text-lg">
					Call now and we’ll be on our way, anywhere in Greensboro.
				</p>
				<PhoneButton className="mt-6">(336) 947-2786</PhoneButton>
			</div>
		</section>
	</div>
</Layout>
